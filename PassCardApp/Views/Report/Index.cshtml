
@{
    ViewData["Title"] = "Report";
}

<h2>Index</h2>

@if (User.IsInRole("Admin"))
{
    <hr />
    <h2>Download User List</h2>
    <div class="form-group">
        <div>
            <p>
                <a href=@Url.Action("GenerateUsersSpreadsheet","Report") class="btn btn-success">Download User List</a>
            </p>
        </div>
    </div>
}
<hr />
<h2>Download Sales</h2>
<div>
    <div class="row">
        <div class="col-md-4" style="padding:15px;">

            <form action=@Url.Action("GenerateSalesSpreadSheet", "Report" ) method="get">
                
                <div class="form-group">
                    <label class="control-label">From</label>
                    <input @Html.TextBox("from", "", new { type = "date", @class = "form-control datepicker" })
                </div>
                <div class="form-group">
                    <label class="control-label">Until</label>
                    @Html.TextBox("until", "", new { type = "date", @class = "form-control datepicker" })
                </div>
                <div class="form-group">
                    <label class="control-label">Only My Sales</label>
                    @Html.CheckBox("onlyMySales", true)
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Download Sales</button>
                </div>
            </form>
        </div>
    </div>
</div>
