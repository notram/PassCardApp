@model IEnumerable<PassCardApp.Models.Clients>
@{
    ViewData["Title"] = "Home";
}

<h2>Home</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Search", "Sales",FormMethod.Get))
        {
            <input type="text" name="searchterm" autofocus/>
            <input type="submit" value="Find"/>
        }
    </div>
</div>
@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PasscardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsertedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasscardNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsertedAt)
                </td>
                <td>
                    <form action=@Url.Action("Overview", "Sales", new { userid= item.ClientId }) method="get">
                        <button type="submit" class="btn btn-success">Select</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
}