@model IEnumerable<PassCardApp.Models.Clients>
@{
    ViewData["Title"] = "Home";
}

<h2>Find Client</h2>

<div class="row">
    <div class="text-center">
        @using (Html.BeginForm("Search", "Sales",FormMethod.Get))
        {
            <input type="text" class="text-center" name="searchterm" autofocus/>
            <input type="submit" class="text-center" value="Find"/>
        }
    </div>
</div>

@if (Model != null || Model?.Count() == 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PasscardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsertedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasscardNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsertedAt)
                </td>
                <td>
                    <a href=@Url.Action("OverviewClient", "Sales", new { ClientId= item.ClientId }) class="btn btn-success" >Select</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}